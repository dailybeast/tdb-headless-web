---
import Layout from '@/components/layout/Layout.astro';
import { Card, CardDescription, CardFooter, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
---

<Layout title="Page Not Found - The Looker">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-6xl font-bold font-druk mb-4">404</h1>
      <h2 class="text-2xl font-bold mb-4">Page Not Found</h2>
      <p class="text-muted-foreground mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <Button asChild>
        <a href="/">Return to Homepage</a>
      </Button>
    </div>

    <div class="mt-16">
      <h3 class="text-2xl font-bold font-druk mb-8 text-center">Popular Articles</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {[1, 2, 3, 4, 5, 6].map((i) => (
          <Card className="group cursor-pointer hover:shadow-lg transition-all">
            <div class="aspect-[16/9] bg-muted relative overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center text-muted-foreground">
                <span>Article {i} Image</span>
              </div>
            </div>
            <CardHeader>
              <div class="text-xs text-primary font-medium uppercase tracking-wide">
                Category Placeholder
              </div>
              <CardTitle className="text-lg font-bold font-druk leading-tight line-clamp-2 group-hover:text-primary transition-colors">
                Popular Article Headline Placeholder {i}
              </CardTitle>
              <CardDescription className="text-sm line-clamp-2">
                This is a placeholder description for popular article {i}. The actual content would show a brief excerpt from the article.
              </CardDescription>
            </CardHeader>
            <CardFooter className="pt-0">
              <div class="flex items-center text-xs text-muted-foreground">
                <span>Author Name</span>
                <span class="mx-2">â€¢</span>
                <time>2 hours ago</time>
              </div>
            </CardFooter>
          </Card>
        ))}
      </div>
    </div>
  </div>
</Layout>